#Alias personalizados
apachefolder() {
    path="/var/www/html"

    if [ $1 ]; then
        path="${path}/${1}";
    fi;

    cd $path;
}

projectsfolder(){
    path="/home/$(whoami)/Doc*/projects";

    if [ $1 ]; then
        path="$path/$1";
    fi

    cd $path;
};

# Para projetos com code sniffer
psr-fix() {
    eval "./vendor/bin/phpcbf --standard=PSR12 ${1}";
}

psr-check() {
    eval "./vendor/bin/phpcs --standard=PSR12 ${1}";
}